{
  "extends": [
    "config:recommended"
  ],
  "flux": {
    "fileMatch": ["cluster/.*\\.yaml"]
  },
  "kubernetes": {
    "fileMatch": ["cluster/.*\\.yaml$"]
  },
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["quay\\.io\/invidious\/.+"],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-(?<revision>[a-f0-9]+)$"
    }
  ]
}
